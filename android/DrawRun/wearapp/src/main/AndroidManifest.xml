        <activity
            android:name=".presentation.DrawRunMainActivity"
            android:theme="@style/CustomSplashTheme"
            android:taskAffinity="com.example.drawrun.watch"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- Data URI에 대한 필터링 -->
<!--                <data-->
