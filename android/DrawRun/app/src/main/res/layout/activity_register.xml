<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171515"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Draw Run"
        android:textSize="50sp"
        android:textColor="@color/logo_color"
        android:fontFamily="@font/praise_regular"
        android:includeFontPadding="true"
        android:paddingTop="40dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <!-- ID 라벨 -->
    <TextView
        android:id="@+id/tvIdLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="@id/etUserId"
        />

    <!-- ID 입력 필드 -->
    <EditText
        android:id="@+id/etUserId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:hint="영어 대소문자, 숫자 | 4자 이상, 16자 이하"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="12sp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvIdLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email 라벨 -->
    <TextView
        android:id="@+id/tvEmailLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/etUserId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="@id/etEmail" />

    <!-- Email 입력 필드 -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:hint="올바른 이메일을 입력하세요"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="12sp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/tvEmailLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password 라벨 -->
    <TextView
        android:id="@+id/tvPasswordLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="@id/etPassword" />

    <!-- Password 입력 필드 -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="12sp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tvPasswordLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password 확인 라벨 -->
    <TextView
        android:id="@+id/tvConfirmPasswordLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Confirm Password"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="@id/etConfirmPassword" />

    <!-- Password 확인 입력 필드 -->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="입력한 비밀번호를 한번 더 입력하세요"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="12sp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmPasswordLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이름 라벨 -->
    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="@id/etUserName" />

    <!-- 이름 입력 필드 -->
    <EditText
        android:id="@+id/etUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="이름을 입력하세요"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="12sp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 닉네임 라벨 -->
    <TextView
        android:id="@+id/tvNicknameLabel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nickname"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/etUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="@id/etNickname" />

    <!-- 닉네임 입력 필드 -->
    <EditText
        android:id="@+id/etNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="닉네임을 입력하세요"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="12sp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvNicknameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 회원가입 완료 버튼 -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="완료"
        android:textColor="#171515"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/pretendard_regular"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etNickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

