<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navi.NaviActivity">

    <!-- ✅ Mapbox 지도 -->
    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 🔥 ✅ 중앙 로딩 화면 (ProgressBar) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ✅ 하단 코스 정보 레이아웃 -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="8dp"
        android:layout_margin="16dp"
        android:backgroundTint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="28dp">

        <!-- 타이틀 -->
        <TextView
            android:id="@+id/courseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코스 정보"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <!-- 출발 위치 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mark_icon"
                android:tint="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/startLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부산광역시 강서구 송정동"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

            <!-- ✅ 복사 기능 추가 -->
            <TextView
                android:id="@+id/copyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복사"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="8dp"
                android:padding="4dp"

                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- ✅ 거리 & "GO!" 버튼을 같은 행에 배치 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <!-- 거리 정보 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/map_ai_icon"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.44 km"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- ✅ "GO!" 버튼 (오른쪽 끝에 배치) -->
            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="GO!"
                android:textStyle="bold"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:minWidth="80dp"/> <!-- ⬅️ 버튼 크기 조정 -->
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
