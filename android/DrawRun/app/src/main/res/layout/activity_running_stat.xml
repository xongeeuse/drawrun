<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#171515"
    tools:context=".ui.mypage.RunningStatActivity">

    <TextView
        android:id="@+id/runningStatTitleTextView"
        android:layout_width="350dp"
        android:layout_height="82dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/praise_regular"
        android:text="Running Total"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <!-- ✅ Guideline 추가하여 정확한 중앙 정렬 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"/>

    <!-- ✅ 첫 번째 행 -->
    <TextView
        android:id="@+id/totalTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 운동 시간"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/runningStatTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/totalTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:07:34"
        android:textColor="#FFA500"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/totalTimeLabel"
        app:layout_constraintStart_toStartOf="@id/totalTimeLabel"
        app:layout_constraintEnd_toEndOf="@id/totalTimeLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/averagePaceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평균 페이스"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/runningStatTitleTextView"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/averagePaceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01'26\"
        android:textColor="#FF00FF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/averagePaceLabel"
        app:layout_constraintStart_toStartOf="@id/averagePaceLabel"
        app:layout_constraintEnd_toEndOf="@id/averagePaceLabel"
        android:layout_marginTop="8dp"/>

    <!-- ✅ 두 번째 행 -->
    <TextView
        android:id="@+id/totalDistanceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 거리"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/totalTimeTextView"
        app:layout_constraintStart_toStartOf="@id/totalTimeLabel"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/totalDistanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="94.14 km"
        android:textColor="#1E90FF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/totalDistanceLabel"
        app:layout_constraintStart_toStartOf="@id/totalDistanceLabel"
        app:layout_constraintEnd_toEndOf="@id/totalDistanceLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/averageHeartbeatLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평균 심박수"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/averagePaceTextView"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/averageHeartbeatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0 bpm"
        android:textColor="#FF4500"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/averageHeartbeatLabel"
        app:layout_constraintStart_toStartOf="@id/averageHeartbeatLabel"
        app:layout_constraintEnd_toEndOf="@id/averageHeartbeatLabel"
        android:layout_marginTop="8dp"/>


    <!-- 하단 네비게이션 -->
    <include
        layout="@layout/layout_bottom_navigation"
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
